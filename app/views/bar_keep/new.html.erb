<div id="form">
  <div class="wrapper_skinny">
    <h2>Create a Bar Keep profile</h2>

    <%= form_for @bar_keep, url: {action: "create"} do |f| %>

      <% if @bar_keep.errors.any? %>
        <div id="error_explanation">
          <h2>Oops! We couldn't create your profile.  Please see below.</h2>

          <ul>
          <% @bar_keep.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :tavern_name %><br>
      <%= f.text_field :company_name %><br>

      <%= f.label :bio %><br>
      <%= f.text_area :bio %><br>

      <%= f.label :phone %><br>
      <%= f.telephone_field :phone %><br>

      <%= f.label :website %><br>
      <%= f.text_field :website %><br>  

      <%= f.label :instagram %><br>
      <%= f.text_field :instagram %><br>

      <%= f.label :facebook %><br>
      <%= f.text_field :facebook %><br>

      <%= f.label :twitter %><br>
      <%= f.text_field :twitter %><br>

      <%= f.label :profile_pic %><br>
      <%= f.file_field :profile_pic %><br>  
      
      <%= f.submit %>
      <br>
      <%= link_to "Cancel", :back %>

    <% end %>
  </div>
</div>