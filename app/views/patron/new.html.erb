<%= form_for @patron, url: {action: "create"} do |f| %>

  <% if @patron.errors.any? %>
    <div id="error_explanation">
      <h2>Oops! We couldn't create your profile.  Please see below.</h2>

      <ul>
      <% @patron.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :bio %><br>
  <%= f.text_area :bio %><br>
  
  <%= f.submit %>

<% end %>