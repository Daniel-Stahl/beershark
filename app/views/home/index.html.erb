<div id="background">
	<header id="main_header" class="cf">
		<div class="wrapper_wide">
			<%= link_to "Beershark", root_path, id: "logo" %>
			<nav>
				<ul>
					<% unless member_signed_in? %>
						<li> Explore </li>
						<li><%= link_to "Sign In", new_member_session_path %></li>
						<li><%= link_to "Sign Up", new_member_registration_path %></li>
					<% else %>
						<li> Explore </li>
						<li><%= link_to "Sign Out", destroy_member_session_path, method: :delete %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</header>	
	<div class="wrapper_skinny">
		<h1>Hunt down your next favorite beer!</h1>
		<%= link_to "Join the frenzy!", new_member_registration_path, class: "button button_highlight" %>
	</div>	
</div>

